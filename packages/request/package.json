{
  "name": "@esri/hub-request",
  "version": "0.0.1",
  "description": "A module for making requests to ArcGIS Hub that runs in Node.js and modern browsers.",
  "main": "dist/node/index.js",
  "browser": "dist/umd/hub-request.umd.js",
  "module": "dist/esm/index.js",
  "js:next": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "license": "Apache-2.0",
  "dependencies": {
    "tslib": "^1.7.1",
    "@esri/arcgis-rest-request": "^1.1.1"
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run build:node && npm run build:umd && npm run build:esm",
    "build:esm": "tsc --module es2015 --outDir ./dist/esm --declaration",
    "build:umd": "rollup -c ../../umd-base-profile.js && rollup -c ../../umd-production-profile.js",
    "build:node": "tsc --module commonjs --outDir ./dist/node"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArcGIS/hub.js.git"
  },
  "contributors": [
    {
      "name": "Patrick Arlt",
      "email": "parlt@esri.com",
      "url": "http://patrickarlt.com/"
    }
  ],
  "bugs": {
    "url": "https://github.com/ArcGIS/hub.js/issues"
  },
  "homepage": "https://github.com/ArcGIS/hub.js#readme"
}
