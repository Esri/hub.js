{
  "name": "@esri/hub-sites",
  "version": "1.0.0",
  "description": "Module to interact with ArcGIS Hub Sites in Node.js and modern browsers.",
  "main": "dist/node/index.js",
  "browser": "dist/umd/hub-sites.umd.js",
  "module": "dist/esm/index.js",
  "js:next": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "license": "Apache-2.0",
  "dependencies": {
    "tslib": "^1.7.1",
    "@esri/arcgis-rest-request": "^1.1.1",
    "@esri/arcgis-rest-auth": "^1.1.1",
    "@esri/arcgis-rest-items": "^1.1.1",
    "@esri/arcgis-rest-common-types": "^1.1.1"
  },
  "peerDependencies": {
    "@esri/hub-common-types": "^1.0.0",
    "@esri/hub-initiatives": "^1.0.0"
  },
  "devDependencies": {
    "@esri/hub-common-types": "^1.0.0",
    "@esri/hub-initiatives": "^1.0.0"
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run build:node && npm run build:umd && npm run build:esm",
    "build:esm": "tsc --module es2015 --outDir ./dist/esm --declaration",
    "build:umd": "rollup -c ../../umd-base-profile.js && rollup -c ../../umd-production-profile.js",
    "build:node": "tsc --module commonjs --outDir ./dist/node"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Esri/hub.js.git"
  },
  "contributors": [
    {
      "name": "John Gravois",
      "email": "john@esri.com"
    },
    {
      "name": "Tom Wayson",
      "email": "twayson@esri.com"
    }
  ],
  "bugs": {
    "url": "https://github.com/Esri/hub.js/issues"
  },
  "homepage": "https://github.com/Esri/hub.js#readme"
}
